<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTROL ROOM"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold">
    </TextView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:rowCount="8"
        android:columnCount="2"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/room1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROOM 1"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:layout_row="0"
            android:layout_column="0"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="63dp"
            android:id="@+id/toggleSwitch1"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/room2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="ROOM 2"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="62dp"
            android:layout_gravity="right"
            android:id="@+id/toggleSwitch2"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/room3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="left"
            android:text="ROOM 3"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="63dp"
            android:layout_gravity="left"
            android:id="@+id/toggleSwitch3"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/room4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:text="FACULTY"
            android:textSize="20dp"
            android:layout_marginRight="47dp"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="63dp"
            android:id="@+id/toggleSwitch4"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/room5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="COMP LAB 1"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="63dp"
            android:layout_gravity="left"
            android:layout_row="5"
            android:layout_column="0"
            android:id="@+id/toggleSwitch5"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/room6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="COMP LAB 2"
            android:textSize="20dp"
            android:layout_above="@+id/toggleSwitch2"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="63dp"
            android:layout_gravity="right"
            android:id="@+id/toggleSwitch6"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/room7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="LIBRARY"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:layout_gravity="left"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="63dp"
            android:layout_gravity="left"
            android:id="@+id/toggleSwitch7"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

        <TextView
            android:id="@+id/computerLab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="LOBBY"
            android:textSize="20dp"
            android:layout_above="@+id/toggleSwitch2"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"

            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="63dp"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="right"
            android:id="@+id/toggleSwitch8"
            android:track="@drawable/bg_track"
            android:thumb="@drawable/ic_thumb"
            android:scaleX="2"
            android:scaleY="2"
            android:checked="false"
            android:enabled="true"/>

    </GridLayout>
</RelativeLayout>